{
  "name": "presskit",
  "version": "1.0.0",
  "description": "A static site generator for press kits",
  "license": "MIT",
  "repository": "Tsukumogami-Software/presskit.html",
  "author": {
    "name": "Tsukumogami Software",
    "url": "https://tsukumogami.software/"
  },
  "keywords": [
    "presskit",
    "static site generator"
  ],
  "homepage": "https://github.com/Tsukumogami-Software/presskit.html#readme",
  "bugs": "https://github.com/Tsukumogami-Software/presskit.html/issues",
  "main": "lib/index.js",
  "type": "module",
  "bin": {
    "presskit": "bin/presskit"
  },
  "scripts": {
    "start": "node bin/presskit build --watch --dev data",
    "build": "node bin/presskit build data",
    "test": "vitest run",
    "tester": "vitest",
    "docs": "./documentation",
    "docs:example": "node bin/presskit build -DLM -o docs/example data",
    "format": "standard --fix",
    "lint": "standard | snazzy"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "browser-sync": "^3.0.2",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "handlebars": "^4.7.8",
    "mkdirp": "^3.0.1",
    "rimraf": "^5.0.7",
    "sharp": "^0.33.4",
    "upath": "^2.0.1",
    "yaml": "^2.4.2"
  },
  "devDependencies": {
    "snazzy": "^9.0.0",
    "standard": "^17.1.0",
    "vitest": "^1.6.0"
  },
  "standard": {
    "globals": [
      "beforeAll",
      "afterAll",
      "beforeEach",
      "afterEach",
      "it",
      "describe",
      "expect"
    ]
  }
}
